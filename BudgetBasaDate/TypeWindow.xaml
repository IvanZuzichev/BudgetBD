<Window x:Class="BudgetBasaDate.TypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetBasaDate"
        mc:Ignorable="d"
        Title="TypeWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите тип записи" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
        <TextBox x:Name="typeBox" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="IDtypeBox" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="AddType2" Content="Добавать тип" Grid.Column="1" Grid.Row="3" Background="Gray" FontSize="25" FontWeight="Bold" Click="AddType2_Click"/>
        <DataGrid x:Name="Gridd" Grid.Column="0" Grid.Row="4"/>
    </Grid>
</Window>
